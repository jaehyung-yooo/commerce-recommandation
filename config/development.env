# 환경 설정
ENVIRONMENT=development

# 데이터베이스 설정
MYSQL_SERVER=localhost
MYSQL_USER=commerce_user
MYSQL_PASSWORD=commerce_password
MYSQL_DB=commerce_recommendation
MYSQL_PORT=3306

# OpenSearch 설정
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 설정
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 추천 엔진 설정
RECOMMENDATION_ENGINE_HOST=localhost
RECOMMENDATION_ENGINE_PORT=8001

# 로깅 설정
LOG_LEVEL=DEBUG

# API 설정
API_V1_STR=/api/v1
PROJECT_NAME=Commerce Recommendation API

# Frontend 설정
REACT_APP_API_URL=http://localhost:8000
REACT_APP_RECOMMENDATION_ENGINE_URL=http://localhost:8001 